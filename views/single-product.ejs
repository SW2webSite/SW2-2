<%- include('header') -%>
<link rel="stylesheet" href="/css/my-pro-style.css">
<link rel="stylesheet" href="/css/bootstrap.css">
<%- include('nav')  -%>


<div class="container">
  <div class="row">

    <div class="col-md-4">
      <img style="height: 300px;" src="<%= product.img %>">
    </div>

    <div class="col-md-4">

    </div>


    <div class="col-md-4">
      <h3><%= product.name %></h3>
      <h1><%= product.price %> L.E</h1>

      <form method="post" action="">
        <div class="btn-group" role="group" aria-label="...">
          <input type="hidden" name="quantity" id="quantity" value="1"></input>
          <button type="button" id="minus" class="btn btn-default">-</button>
          <button type="button" id="total" class="btn btn-default">1</button>
          <button type="button" id="plus" class="btn btn-default">+</button>
        </div>

        <div class="form-group">
          <input type="hidden" name="product_id" id="quantity" value="<%= product._id %>"></input>
          <input type="hidden" name="priceHidden" id="priceHidden" value="<%= product.price %>"></input>

          <input type="text" name="item" class="form-control" value="<%= product.name %>"></input>
          <input type="text" name="priceValue" id="priceValue" class="form-control" value="<%= product.price %>"></input>
        </div>

        <% if (auth)  { %>
          <button type="submit" class="btn btn-primary btn-lg">Add to Cart</button>
        <% } else { %>
          <a href='/register' class="btn btn-warning btn-lg">Signup to begin buying!</a>
        <% } %>
      </form>

      <% if(adminAuth){ %>
        <div class="row">
          <form class="" action="/edit-product" method="post">
            <div class="card card-body dashBox">
              <div class="control-group">
                <h1>Edit Product</h1>
                <div class="form group floating-label-form-group controls">
                  <div class="input-field col s12">
                    <label>Name</label>
                    <input type="text" name="productName" value="">
                  </div>
                </div>
                <div class="form group floating-label-form-group controls">
                  <div class="input-field col s12">
                    <label>Price</label>
                    <input type="text" name="productPrice" value="">
                  </div>
                </div>
                <div class="form group floating-label-form-group controls">
                  <div class="input-field col s12">
                    <label>Description</label>
                    <input type="text" name="productDescription" value="">
                  </div>
                </div>
                <div class="form group floating-label-form-group controls">
                  <div class="input-field col s12">
                    <label>Category</label>
                    <select class="form-control" name="productCategory">
                    <option value="" disabled selected>Choose your option</option>
                    <% Categories.forEach(function(category){ %>
                      <option value="<%=category._id%>"><%=category.name%></option>
                    <%  }) %>
                  </select>
                  </div>
                </div>
              </div>
              <div class="control-group">
                <div class="form-group text-center">
                  <button type="submit" class="btn btn-primary" name="button">Edit</button>
                </div>
              </div>
            </div>
          </form>
        </div>
    <%  } %>

    </div>
  </div>
</div>
<%- include('footer')  -%>
